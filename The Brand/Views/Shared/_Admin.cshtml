
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>The Brand</title>
    <link href="~/css/Admin.css" rel="stylesheet" />
    <link href="~/css/add.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
</head>
<body style="padding: 0;margin: 0;">
    <div class="wrapper">
        <header>
            <img src="~/img/Logo.png" alt="The brand Logo" />
            <span class="Logo">ADMIN</span>

            @Html.Partial("_AdminSignin")
            <nav >
                <div class="User">
                    <span class="Store">@Html.ActionLink("Go to Store", "Index" ,"Shopping")</span>
                </div>
            </nav>
        </header>

        <section style=" margin: 55px 0px;">
            @RenderBody()
        </section>

        <footer>
            <img src="~/img/Logo.png" alt="The brand Logo" />
            <p>
                Copyright © 2020, All Rights Reserved.
            </p>
            <span class="realized">
                realized by :
                <a class="name"> Hamza Boulila</a>
            </span>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</body>
</html>

